<header class="site-home-header">
    {{> header-background background=@site.cover_image}} {{!--Special header-image.hbs partial to generate the background image--}}
        <div class="inner">
            {{> "casper-site-nav"}}
            <div class="site-header-content">
                <h1 class="site-title">
                    <img class="logo-image" src="{{@site.logo}}" alt="{{@site.title}}" style="max-height: 150px; margin: auto; margin-bottom: 20px;">
                    {{@site.title}}
                </h1>
                <h2 class="site-description" style="font-weight: bold;">{{@site.description}}</h2>
            </div>
        </div>
    </div>
</header>
